#!/bin/bash

#SBATCH --partition=gpu
#SBATCH --nodes=1
#SBATCH --ntasks=4
#SBATCH --cpus-per-task=18
#SBATCH --gpus=4
#SBATCH --job-name=fps6_ft_pred_animal_grounding
#SBATCH --time=00:25:00
#SBATCH --output=./out/ft_pred_fps_6_animal_grounding_s1-%A.out

set -e

module purge
module load 2022
module load Miniconda3/4.12.0
module load CUDA/11.7.0

# Activate your environment
source activate llamavid

CUDA_VISIBLE_DEVICES='0,1,2,3'
gpu_list="${CUDA_VISIBLE_DEVICES:-0}"
IFS=',' read -ra GPULIST <<< "$gpu_list"

CHUNKS=${#GPULIST[@]}

CKPT="finetuning-vid-grounding-animals-fps-6-final-batch"

for IDX in $(seq 0 $((CHUNKS-1))); do
    CUDA_VISIBLE_DEVICES=${GPULIST[$IDX]} python llamavid/eval/model_grounding_qa.py \
    --model-path ./work_dirs/$CKPT \
    --video_dir ./data/LLaMA-VID-Eval/animal-kingdom/grounding/videos \
    --gt_file_question ./data/LLaMA-VID-Eval/animal-kingdom/grounding/test_questions.json \
    --gt_file_answers ./data/LLaMA-VID-Eval/animal-kingdom/grounding/test_answers.json \
    --output_dir ./work_dirs/animal_kingdom/grounding_full_ft_fps6_v2/$CKPT \
    --output_name pred \
    --num-chunks $CHUNKS \
    --chunk-idx $IDX \
    --conv-mode vicuna_v1 \
    --video_fps 6 &

done

wait
