#!/bin/bash

#SBATCH --partition=gpu
#SBATCH --nodes=1
#SBATCH --ntasks=1
#SBATCH --cpus-per-task=18
#SBATCH --gpus=1
#SBATCH --job-name=eval_ft_small_animal_grounding_fps-1
#SBATCH --time=00:10:00
#SBATCH --output=./out/ft_small_animal_grounding_s1_fps-1-%A.out

set -e

module purge
module load 2022
module load Miniconda3/4.12.0
module load CUDA/11.7.0

# Activate your environment
source activate llamavid

nvidia-smi

CUDA_VISIBLE_DEVICES='0'
gpu_list="${CUDA_VISIBLE_DEVICES:-0}"
IFS=',' read -ra GPULIST <<< "$gpu_list"

CHUNKS=${#GPULIST[@]}

CKPT="finetuning-grounding-animals-scratch-fps-1-ckpt"

for IDX in $(seq 0 $((CHUNKS-1))); do
    CUDA_VISIBLE_DEVICES=${GPULIST[$IDX]} python llamavid/eval/model_activitynet_qa.py \
    --model-path ./work_dirs/$CKPT \
    --video_dir ./data/LLaMA-VID-Eval/animal-kingdom/grounding/videos \
    --gt_file_question ./data/LLaMA-VID-Eval/animal-kingdom/grounding/test_questions.json \
    --gt_file_answers ./data/LLaMA-VID-Eval/animal-kingdom/grounding/test_answers.json \
    --output_dir ./work_dirs/animal_kingdom/grounding_reduced_ft/$CKPT \
    --output_name pred \
    --num-chunks $CHUNKS \
    --chunk-idx $IDX \
    --conv-mode vicuna_v1 &

done

wait
